<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.screens.FirstScreenFragment"
    android:id="@+id/firstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:orientation="vertical"
        android:layout_marginTop="150dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewFirstFragment"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:backgroundTint="#EEF3F7"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:srcCompat="@drawable/breaking_news" />

        <TextView
            android:id="@+id/firstFragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/first_fragment_join_us_at_breaking_news"
            android:textAlignment="center"
            android:textSize="30sp" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/firstFragmentButton"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:layout_gravity="end"
            android:layout_marginTop="150dp"
            android:background="@color/fragment_bg_colour"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_height="40dp"
            android:layout_width="30dp"/>
    </LinearLayout>


</FrameLayout>